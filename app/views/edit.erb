<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <label for="name"><%= @recipe.name %></label>
    <input type="text" name="name" id="" value="<%= @recipe.name %>">
    <label for="ingredients"><%= @recipe.ingredients %></label>
    <input type="text" name="ingredients" id="" value="<%= @recipe.ingredients %>">
    <label for="cook_time"><%= @recipe.cook_time %></label>
    <input type="text" name="cook_time" id="" value="<%= @recipe.cook_time %>">
    <input type="submit" value="update">
</form>