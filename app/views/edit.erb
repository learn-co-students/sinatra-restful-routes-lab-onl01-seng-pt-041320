<form action="/recipes/<%=@recipe.id%>" method="post">
<input id="hidden" name="_method" type="hidden" value="patch">
Recipe: <input type="text" name="name" value="<%=@recipe.name%>">
Ingredients: <input type="text" name="ingredients" value="<%=@recipe.ingredients%>">
Cook Time: <input type="text" name="cook_time" value="<%=@recipe.cook_time%>">
<input type="submit" value="Update" ></form>
